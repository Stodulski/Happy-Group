{
    "name": "happy-group",
    "version": "1.0.0",
    "description": "A simple chat",
    "main": "dist/app.js",
    "type": "commonjs",
    "scripts": {
        "dev": "nodemon babel-node src/app.js",
        "start": "node dist/app.js",
        "compile": "babel src -d dist",
        "copyfiles": "ncp src/views dist/views && ncp src/public dist/public",
        "clean": "rimraf dist",
        "cache": "npm cache clean --force",
        "build": "npm run clean && npm run compile && npm run copyfiles && npm run cache"
    },
    "author": "Maximo Stodulski",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.8",
        "@babel/node": "^7.16.8",
        "@babel/preset-env": "^7.16.11",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.15",
        "rimraf": "^3.0.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "connect-flash": "^0.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "ejs": "^3.1.6",
        "express": "^4.17.3",
        "express-session": "^1.17.2",
        "helmet": "^5.0.2",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.2.8",
        "morgan": "^1.10.0",
        "socket.io": "^4.4.1"
    }
}
